@section js {
    <script type="text/javascript">
        $(function () {
            var styles = [
                {
                    featureType: "road.local",
                    stylers: [
                        { "hue": "#EE9A1D" },
                        { "saturation": 100 },
                        { "lightness": -20 }
                    ]
                }, {
                    featureType: "road.arterial",
                    stylers: [
                        { "hue": "#EE9A1D" },
                        { "saturation": 100 },
                        { "lightness": -17 }
                    ]
                }, {
                    elementType: "labels.text.stroke",
                    stylers: [
                      { visibility: "off" }
                    ]
                },
                {
                    featureType: "road",
                    elementType: "geometry",
                    stylers: [
                        { visibility: "simplified" }
                    ]
                }
            ];

            var mapOptions = {
                center: new google.maps.LatLng(48.86060033606661, 2.394239496108961),
                zoom: 15,
                mapTypeId: google.maps.MapTypeId.ROADMAP,
                styles: styles
            };
            var map = new google.maps.Map(document.getElementById("map_canvas"), mapOptions);

            var image = new google.maps.MarkerImage("/Content/images/marcker-o.png",
                new google.maps.Size(38.0, 69.0),
                new google.maps.Point(0, 0),
                new google.maps.Point(19.0, 69.0)
            );
            var shadow = new google.maps.MarkerImage("/Content/images/shadow-o.png",
                new google.maps.Size(73.0, 69.0),
                new google.maps.Point(0, 0),
                new google.maps.Point(19.0, 69.0)
            );


            var bounds = new google.maps.LatLngBounds();

            var markerTech = new google.maps.Marker({
                position: new google.maps.LatLng(48.857311, 2.383972),
                title: 'Invenietis - Technical Center',
                zoomControl: true,
                map: map,
                animation: google.maps.Animation.DROP,
                icon: image,
                shadow: shadow
            });
            bounds.extend(markerTech.position);
            var markerHQ = new google.maps.Marker({
                position: new google.maps.LatLng(48.863282, 2.404191),
                title: 'Invenietis - Headquarters',
                zoomControl: true,
                map: map,
                animation: google.maps.Animation.DROP,
                icon: image,
                shadow: shadow
            });
            bounds.extend(markerHQ.position);

            map.fitBounds(bounds);


            var infowindowTech = new google.maps.InfoWindow({
                content: $('#infomapTech').html(),
                width: 192,
                height: 100
            });
            var infowindowHQ = new google.maps.InfoWindow({
                content: $('#infomapHQ').html(),
                width: 192,
                height: 100
            });

            google.maps.event.addListener(markerTech, 'click', function () {
                infowindowTech.open(map, markerTech);
            });

            google.maps.event.addListener(markerHQ, 'click', function () {
                infowindowHQ.open(map, markerHQ);
            });
        });
    </script>
}